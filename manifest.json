{
  "manifest_version": 3,
  "name": "Localizador UVIS SP",
  "version": "2.0",
  "description": "Consulta rápida de UVIS, DA e Bairro por endereço.",
  "permissions": ["clipboardWrite"],
  "host_permissions": [
    "https://nominatim.openstreetmap.org/*",
    "https://viacep.com.br/*"
